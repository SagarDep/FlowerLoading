<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="name.gudong.demo.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下拉旋转顶部菊花"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#ccc"/>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>


    <name.gudong.loading.LoadingView
        android:id="@+id/lv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LoadingView"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="207dp"
        android:maxHeight="200dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/loading_view_demo"/>

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LoadingDrawable"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/loading_drawable_demo"/>
</LinearLayout>
